/* Write your global styles here, in PostCSS syntax */
html,
body {
	@apply h-full overflow-hidden;
}

@font-face {
	font-family: Oswald;
	src: url(/fonts/Oswald/Oswald-Bold.ttf) format('truetype');
}

h1 {
	@apply mb-6 font-ueberschrift text-hauptfarbe lg:text-4xl md:text-3xl sm:text-2xl;
}
h2 {
	@apply font-ueberschrift text-hauptfarbe;
}
h3 {
	@apply font-ueberschrift text-hauptfarbe;
}
